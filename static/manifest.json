{
    "manifest_version": 3,
    "name": "CiteEase",
    "author": "ganemedelabs",
    "version": "1.0.2",
    "description": "Automatically detects URLs, DOIs, PMIDs, PMCIDs, and ISBNs on webpages, and generates citations in your preferred style.",
    "permissions": ["scripting", "activeTab", "storage", "tabs"],
    "host_permissions": ["http://*/*", "https://*/*"],
    "action": {
        "default_title": "CiteEase",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "serviceWorker.bundle.js"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content.bundle.js"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "popup.bundle.js",
                "injected.bundle.js",
                "images/icon-48.png",
                "json/styles.json",
                "json/locales.json"
            ],
            "matches": ["http://*/*", "https://*/*"]
        }
    ],
    "icons": { "16": "images/icon-16.png", "48": "images/icon-48.png", "128": "images/icon-128.png" }
}
